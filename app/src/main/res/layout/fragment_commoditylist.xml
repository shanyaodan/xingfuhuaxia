<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <littlechi.dyc.com.littlechi.view.PagerSlidingTabStrip
            android:id="@+id/tabStrip_data"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </littlechi.dyc.com.littlechi.view.PagerSlidingTabStrip>
        <android.support.v4.view.ViewPager
            android:id="@+id/mypager_data"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
</LinearLayout>
  <include layout="@layout/loading"></include>
</RelativeLayout>